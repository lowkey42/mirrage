{
	"initial": "main",
	"contexts": {

        "main": {
            "keys": {
                "Escape": {"type":"once", "action":"quit"},
                "F1": {"type":"once", "action":"fast_quit"},

                "W": {"type":"continuous", "action":"move_up"},
                "Up": {"type":"continuous", "action":"move_up"},
                "S": {"type":"continuous", "action":"move_down"},
                "Down": {"type":"continuous", "action":"move_down"},

                "A": {"type":"continuous", "action":"move_left"},
                "Left": {"type":"continuous", "action":"move_left"},
                "D": {"type":"continuous", "action":"move_right"},
                "Right": {"type":"continuous", "action":"move_right"},

                "T_1": {"type":"once", "action":"preset_a"},
                "T_2": {"type":"once", "action":"preset_b"},
                "T_3": {"type":"once", "action":"preset_c"},
                "T_4": {"type":"once", "action":"preset_d"},
                "T_5": {"type":"once", "action":"preset_e"},
                "T_6": {"type":"once", "action":"preset_f"},

                "C": {"type":"once", "action":"d_disect"},
                "P": {"type":"once", "action":"print"},
                "R": {"type":"once", "action":"record"},
                "F1": {"type":"once", "action":"start_record"},
                "F2": {"type":"once", "action":"save_record"},
                "F3": {"type":"once", "action":"playback"},
                "Space": {"type":"once", "action":"pause"},

                "F11": {"type":"once", "action":"toggle_ui"},

                "Caret": {"type":"once", "action":"console"}
            },

            "pad_sticks": {
                "left": {"type": "range", "action": "move"},
                "right": {"type": "range", "action": "move"}
            },
            "pad_buttons": {
                "x":  {"type":"continuous", "action":"jump"}
            },

            "mouse_buttons": {
                {"button":3, "clicks":0}: {"type":"continuous", "action":"capture_ptr"},
                {"button":1, "clicks":0}: {"type":"once", "action":"edit_select"}
            },
            "mouse_movement": {"type": "range", "action": "mouse_look"}
        }

	}
}
